          <div>
            <h3>GitHub</h3>
            <p>@t0msly3r</p>
          </div>
        </a>

      </div>
    </div>
  </div>
</section>

<style>
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 3rem;
    text-align: center;
    position: relative;
  }
	
	.section-title::after {
		content: '';
		display: block;
		width: 60px;
		height: 4px;
		background: #3b82f6;
		margin: 1rem auto 0;
		border-radius: 2px;
	}

  .contact {
    padding: 6rem 0;
  }

  .contact-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .contact-intro {
    font-size: 1.2rem;
    color: #a1a1aa;
    margin-bottom: 3rem;
  }

  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .contact-card {
    background: rgba(30, 30, 30, 0.5);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-5px);
    border-color: #3b82f6;
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
  }

  .contact-card svg {
    color: #3b82f6;
  }

  .contact-card h3 {
    font-size: 1.1rem;
    color: #e4e4e7;
    margin: 0;
  }

  .contact-card p {
    color: #71717a;
    margin: 0;
  }

  @media (max-width: 768px) {
    .contact-methods {
      grid-template-columns: 1fr;
    }
  }
</style>